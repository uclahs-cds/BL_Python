[build-system]

requires = ["setuptools>=42", "wheel"]

build-backend = "setuptools.build_meta"

[project]
name = "{{application_name}}"
version = "0.0.1"
dependencies = [
    "BL_Python.web",
{% if 'database' in module %}
    "BL_Python.database"
{% endif %}
]

[tool.pyright]
exclude = [
    ".venv",
    ".pytest_cache",
    ".github",
    ".git",
    "typings",
    "**/node_modules",
    "**/__pycache__",
]
typeCheckingMode = "basic"